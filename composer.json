{
    "name": "aleksdjukic/weight-conversion",
    "description": "This is my package weight-conversion",
    "keywords": [
        "aleksdjukic",
        "weight-conversion"
    ],
    "homepage": "https://github.com/aleksdjukic/weight-conversion",
    "license": "MIT",
    "authors": [
        {
            "name": "Aleksa",
            "email": "djukicaleks91@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Aleksdjukic\\WeightConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aleksdjukic\\WeightConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
